@{
    ViewBag.Title = "CHITIETDONHANG";
    Layout = "~/Views/Quanli/Quanli_admin.cshtml";
}

@using SHOP_SNEAKER.Models;
@model List<CHITIETDONHANG>
<h2>Danh Sách Chi Tiết Sản Phẩm</h2>
<div class="group">
    <button onclick="location.href = '/Quanli/THEMCHITIETDONHANG'" class="btn btn-group btn-success">Thêm Chi Tiết Sản Phẩm</button>
</div>
<div class="group">
    <div class="d-flex" style="column-gap:5px">
        @Html.ValidationMessage("baoloi", "", new { @class = "text-danger" })
        <input placeholder="Tìm kiếm theo mã . . ." type="hidden" name="baoloi">
    </div>
</div>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Mã HD</th>
            <th>Mã SP</th>
            <th>Mã KC</th>
            <th>Mã MS</th>
            <th>Số Lượng</th>
            <th>Thành Tiền</th>
        </tr>
    </thead>
    <tbody id="productTable">
        @foreach(CHITIETDONHANG item in Model)
        {
            <tr class="sanpham_1">
                <td>@item.MADH</td>
                <td>@item.MASP</td>
                <td>@item.MAKC</td>
                <td>@item.MAMS</td>
                <td>@item.SOLUONG</td>
                <td>@item.THANHTIEN</td>
                <td>
                    <a href="@Url.Action("SUA_CTSP","Quanli", new { id = item.MASP , makc = item.MAKC , mams = item.MAMS })" class="btn btn-warning btn-sm">Sửa</a>
                    <a href="@Url.Action("XOA_CTSP", "Quanli", new { id = item.MASP, makc = item.MAKC, mams = item.MAMS })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

