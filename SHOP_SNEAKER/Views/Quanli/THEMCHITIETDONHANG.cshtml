@{
    ViewBag.Title = "THEMCHITIETDONHANG";
    Layout = "~/Views/Quanli/Quanli_admin.cshtml";
}

@using SHOP_SNEAKER.Models;
@model DONHANG
@*  Session["SanPham"] = l;
    Session["KichCo"] = kc;
    Session["MauSac"] = ms;*@

<form action="/Quanli/THEMCHITIETDONHANG" method="post" enctype="multipart/form-data" class="form" style="margin-left:15%">
    <h2>Thêm Sản Phẩm</h2>
    <div class="container">
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label class="form-label">Mã Hoá Đơn @Html.ValidationMessage("ma_ctsp", "", new { @class = "text-danger" })</label>
                    <input value="@Model.MADH" name="ma_ctsp" id="ten_kh" type="number" class="form-control" readonly>
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label for="ten_kh" class="form-label">Mã Sản Phẩm @Html.ValidationMessage("SanPham", "", new { @class = "text-danger" })</label>
                    <select name="sp_ctsp" class="form-select" aria-label="Default select example">
                        <option value="0" selected>Chọn một tùy chọn</option>
                        @if (Session["SanPham"] != null)
                        {
                            List<SANPHAM> l = Session["SanPham"] as List<SANPHAM>;
                            foreach (SANPHAM a in l)
                            {
                                <option value="@a.MASP">@a.TENSP</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label for="ten_kh" class="form-label">Kích Cỡ @Html.ValidationMessage("KichCo", "", new { @class = "text-danger" })</label>
                    <select name="kc_ctsp" class="form-select" aria-label="Default select example">
                        <option value="" selected>Chọn một tùy chọn</option>
                        @if (Session["KichCo"] != null)
                        {
                            List<KICHCO> l = Session["KichCo"] as List<KICHCO>;
                            foreach (KICHCO a in l)
                            {
                                <option value="@a.MAKC">@a.KICHCO1</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label for="ten_kh" class="form-label">Màu Sắc @Html.ValidationMessage("MauSac", "", new { @class = "text-danger" })</label>
                    <select name="ms_ctsp" class="form-select" aria-label="Default select example">
                        <option value="" selected>Chọn một tùy chọn</option>
                        @if (Session["MauSac"] != null)
                        {
                            List<MAUSAC> l = Session["MauSac"] as List<MAUSAC>;
                            foreach (MAUSAC a in l)
                            {
                                <option value="@a.MAMS">@a.TENMAUSAC</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label for="ten_kh" class="form-label">Nội dung mô tả @Html.ValidationMessage("soluong_ctsp", "", new { @class = "text-danger" })</label>
                    <input value="1" name="soluong_ctsp" id="ten_kh" type="number" class="form-control" min="1">
                </div>
            </div>

        </div>
    </div>

    <div class="">
        <button style="margin-left:25px; margin-top:10px" type="submit" class="btn btn-primary">Cập nhật</button>
    </div>
</form>


